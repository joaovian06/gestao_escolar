
.col-xl-3.d-flex.justify-content-center.my-4
  .container-fluid
    .card.img-professor.shadow
      %h2.card-header.text-muted.shadow-sm= t('.professor_info_title')
      .container-fluid.border-bottom.shadow-sm
        .card-img-top.d-flex.flex-column.align-self-center.my-4.mx-auto
          .fa.fa-user.fa-5x.mx-auto
        %h5.card-title.text-center= @professor.name
      .card-body
        .container-fluid.mt-2.py-2
          .card-text= t('.professor_relations_info')

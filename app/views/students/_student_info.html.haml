.col-xl-3.d-flex.justify-content-center.my-4
  .container-fluid
    .card.img-student
      %h2.card-header.text-muted= t('.student_info_title')
      .card-img-top.d-flex.flex-column.align-self-center.my-4
        - if @student.avatar.present?
          = image_tag @student.avatar.thumb.url
        - else
          .fa.fa-user.fa-5x.mx-auto
      .card-body
        %h5.card-title.text-center= @student.name
        .container.border.rounded.mt-2.py-2.bg-light
          - if @student.enrollments.present?
            %h3= t('.enrollments')
            #enrollments.container.border.rounded.bg-white
              - Enrollment.all.map do |enrollment|
                - if enrollment.student_id == @student.id
                  .row
                    .col
                      = link_to "#{enrollment.classroom.name}/#{enrollment.classroom.year}", classroom_path(enrollment.classroom)
            #student-info.container.border.rounded.mt-5.bg-white
              .text-muted= "#{t('.enrollment_count')}: #{@student.enrollments.count}"
          - else
            .card-text= t('.student_relations_info')
